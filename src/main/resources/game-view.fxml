<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import ru.itis.gui.components.GobanPane?>

<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.text.Text?>
<StackPane xmlns="http://javafx.com/javafx/18.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.itis.gui.controllers.GameController" stylesheets="style.css">
    <VBox fx:id="rootVBox" styleClass="root"  alignment="CENTER" spacing="30">
        <StackPane>
            <Canvas fx:id="gridCanvas" height="480" width="480"/>

            <GobanPane fx:id="gobanPane" styleClass="goban-pane" alignment="CENTER" maxHeight="600" maxWidth="600">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="15.0" prefWidth="150.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="15.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="15.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="15.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="15.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="15.0" prefHeight="45.0" vgrow="SOMETIMES" />
                </rowConstraints>
            </GobanPane>
        </StackPane>

        <HBox fx:id="buttonsHBox" spacing="45" alignment="BOTTOM_CENTER">
            <Button fx:id="passButton" styleClass="button" HBox.hgrow="ALWAYS" minWidth="180.0" minHeight="90.0" mnemonicParsing="false" text="Pass" onAction="#onPassBtnClicked"/>
            <Button fx:id="resignButton" styleClass="button" HBox.hgrow="ALWAYS" minWidth="180.0" minHeight="90.0" mnemonicParsing="false" text="Resign" onAction="#onResignBtnClicked" />
        </HBox>
    </VBox>

    <Text fx:id="winText" styleClass="win-text"/>
</StackPane>





