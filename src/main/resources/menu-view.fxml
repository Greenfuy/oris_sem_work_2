<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30" styleClass="menu-pane" stylesheets="style.css"
      xmlns="http://javafx.com/javafx/18.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.itis.gui.controllers.MenuController">

   <ImageView fitHeight="129.0" fitWidth="414.0" layoutX="92.0" layoutY="146.0" nodeOrientation="INHERIT"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@go-game-logo.png"/>
   </ImageView>

   <StackPane>
      <Rectangle height="130.0" styleClass="menu-rectangle" width="294.0"/>

      <VBox alignment="CENTER" translateY="10">
         <Button fx:id="startGameButton" mnemonicParsing="false"
                 onAction="#onStartGameBtnClicked" prefHeight="58.0" prefWidth="202.0" text="Start game">
            <font>
               <Font size="30.0"/>
            </font>
         </Button>

         <Text fx:id="failText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0"
               text="Failed to connect" textAlignment="CENTER" visible="false">
            <font>
               <Font size="18.0"/>
            </font>
         </Text>
      </VBox>
   </StackPane>
</VBox>
